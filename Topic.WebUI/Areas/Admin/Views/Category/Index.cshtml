@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Kategoriler";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}
<table class="table table-bordered table-hover">
	<tr>
		<th>#</th>
		<th>Kategori Adı</th>
		<th>Durum</th>
		<th>Islemler</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<th>@item.CategoryName</th>
			<th>@item.Status</th>
			<td>
				<a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-danger">Sil</a>
				<a asp-action="UpdateCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-info">Guncelle</a>
			</td>
		</tr>
	}
</table>
<a asp-action="CreateCategory" class="btn btn-outline-primary">Yeni Kategori Olustur</a>

